{
  "name": "pixicompose",
  "version": "0.1.0",
  "description": "Declarative UI framework for PixiJS inspired by SwiftUI and Jetpack Compose.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Alexander Farber <farber72@outlook.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afarber/PixiCompose.git"
  },
  "bugs": {
    "url": "https://github.com/afarber/PixiCompose/issues"
  },
  "homepage": "https://github.com/afarber/PixiCompose",
  "keywords": [
    "pixi",
    "pixijs",
    "declarative",
    "ui",
    "compose",
    "swiftui",
    "typescript",
    "canvas",
    "2d",
    "graphics"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && http-server . -p 8080 -o examples/basic.html",
    "dev:button": "npm run build && http-server . -p 8080 -o examples/button.html",
    "dev:text": "npm run build && http-server . -p 8080 -o examples/text.html",
    "dev:image": "npm run build && http-server . -p 8080 -o examples/image.html",
    "dev:row": "npm run build && http-server . -p 8080 -o examples/row.html",
    "dev:column": "npm run build && http-server . -p 8080 -o examples/column.html",
    "lint": "eslint src examples",
    "lint:fix": "eslint src examples --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:browser:debug": "playwright test --debug",
    "pack:check": "npm pack --dry-run",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build && npm test",
    "prepare": "husky"
  },
  "dependencies": {
    "pixi.js": "^8.14.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "canvas": "^3.2.0",
    "eslint": "^9.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
